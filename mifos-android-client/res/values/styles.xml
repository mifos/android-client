<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Label" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#030100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#D46601</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Errors" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FF2400</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Info" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#030100</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="InfoBig" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#030100</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Shifted">
        <item name="android:paddingLeft">14dp</item>
    </style>

    <style name="BigTableSeparator">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/tableSeparator</item>
    </style>

    <style name="SmallTableSeparator">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/tableSeparator</item>
    </style>

    <style name="TableColumnHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ItalicizedText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TableItem">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="BoldItalicizedTableItem" parent="TableItem">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ItalicizedTableItem" parent="TableItem">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BoldTableItem" parent="TableItem">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShiftedTableItem" parent="TableItem">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ItalicizedShiftedTableItem" parent="ShiftedTableItem">
        <item name="android:textStyle">italic</item>
    </style>

</resources>