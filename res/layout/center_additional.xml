<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            style="@style/Label"
            android:id="@+id/centerAdditional_mfiJoining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centerAdditional_mfiJoining_label"
            />
        <TextView
            style="@style/Shifted"
            android:id="@+id/centerAdditional_mfiJoining"
            android:layout_below="@id/centerAdditional_mfiJoining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            style="@style/Label"
            android:id="@+id/centerAdditional_ceneterStart_label"
            android:layout_below="@id/centerAdditional_mfiJoining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centerAdditional_centerStart_label"
            />
        <TextView
            style="@style/Shifted"
            android:id="@+id/centerAdditional_centerStart"
            android:layout_below="@id/centerAdditional_ceneterStart_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            style="@style/Label"
            android:id="@+id/centerAdditional_loanOfficer_name_label"
            android:layout_below="@id/centerAdditional_centerStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centerAdditional_loanOfficer_name_label"
            />
        <TextView
            style="@style/Shifted"
            android:id="@+id/centerAdditional_loanOfficer_name"
            android:layout_below="@id/centerAdditional_loanOfficer_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

             <TextView
                style="@style/Label"
                android:id="@+id/centerAdditional_recentNotes_label"
                android:layout_below="@id/centerAdditional_loanOfficer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/centerAdditional_recentNotes_label"
                android:visibility="invisible"
                />
            <LinearLayout
                android:id="@+id/centerAdditional_recentNotes"
                android:orientation="vertical"
                android:layout_below="@id/centerAdditional_recentNotes_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
            </LinearLayout>

    </RelativeLayout>

</ScrollView>